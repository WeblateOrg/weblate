#!/bin/sh
# Setup test executor

. ci/lib

INSTALL_DIR=`mktemp -d`

trap "rm -rf $INSTALL_DIR" EXIT

run_coverage ./setup.py build
check

run_coverage ./setup.py install --root="$INSTALL_DIR"
check

run_coverage ./setup.py sdist
check

INSTALLED_DIR=`find $INSTALL_DIR -name '*-packages' -type d`
BIN_DIR=`find $INSTALL_DIR -name 'bin' -type d`

diff -ruNqp -x '*.swp' -x '*.pyc' weblate $INSTALLED_DIR/weblate
check

cd $INSTALL_DIR
PYTHONPATH=$INSTALLED_DIR $BIN_DIR/weblate test -v 2 --settings weblate.settings_test weblate.trans weblate.lang weblate.accounts weblate.api weblate.billing weblate.utils weblate.gitexport weblate.screenshots weblate.auth weblate.legal weblate.checks weblate.addons weblate.formats weblate.wladmin weblate
check
